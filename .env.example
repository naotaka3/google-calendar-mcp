# Google OAuth2 認証情報
GOOGLE_CLIENT_ID=your_client_id
GOOGLE_CLIENT_SECRET=your_client_secret
GOOGLE_REDIRECT_URI=http://localhost:4153/oauth2callback

# 認証サーバー設定
AUTH_PORT=4153
AUTH_HOST=localhost

# 手動認証モード（リモートサーバーやコンテナで使用する場合に有効）
# USE_MANUAL_AUTH=true

# サーバー設定（STDIOトランスポート使用時は未使用）
PORT=3000
HOST=localhost

# ログレベル (debug, info, warn, error)
LOG_LEVEL=info

# トークン暗号化キー（オプション）
# 設定しない場合、自動的に生成されて ~/.google-calendar-mcp/encryption-key.txt に保存されます
# 共有環境などで暗号化キーを制御したい場合のみ設定してください
# 生成方法: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
# TOKEN_ENCRYPTION_KEY=your_64_char_hex_string_here
